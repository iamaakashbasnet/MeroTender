@model UserSignupModel

@{
    ViewData["Title"] = "Signup";
}


<h1>Signup</h1>
@Html.ValidationSummary()
<form asp-action="Signup" asp-controller="Account" method="POST">
    <div class="mb-3">
        <label asp-for="@Model.Username" class="form-label"></label>
        @Html.TextBoxFor(m => m.Username, new { placeholder = "Username", @class = "form-control", id = @Model.Username })
        <div class="invalid-feedback">
            @Html.ValidationMessageFor(m => m.Username)
        </div>
    </div>

    <div class="mb-3">
        <label asp-for="@Model.Email" class="form-label"></label>
        @Html.TextBoxFor(m => m.Email, new { placeholder = "Email", @class = "form-control", id = @Model.Email })
        <div class="invalid-feedback">
            @Html.ValidationMessageFor(m => m.Email)
        </div>
    </div>

    <div class="mb-3">
        <label asp-for="@Model.Password" class="form-label"></label>
        @Html.PasswordFor(m => m.Password, new { placeholder = "Password", @class = "form-control", id = @Model.Password })
        <div class="invalid-feedback">
            @Html.ValidationMessageFor(m => m.Password)
        </div>
    </div>

    <div class="mb-3">
        <label asp-for="@Model.ConfirmPassword" class="form-label"></label>
        @Html.PasswordFor(m => m.ConfirmPassword, new { placeholder = "Confirm Password", @class = "form-control", id = @Model.ConfirmPassword })
        <div class="invalid-feedback">
            @Html.ValidationMessageFor(m => m.ConfirmPassword)
        </div>
    </div>

    <div class="mb-3">
        <button type="submit" class="btn btn-primary">Signup</button>
    </div>
</form>